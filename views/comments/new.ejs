<%- include("../partials/header")%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;"> <%= campground.name %> | Add a New Comment</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment"></input>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Add New Comment</button>
                </div>
            </form>
            
            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>